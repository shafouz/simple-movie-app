<div data-controller="modal" data-action="keyup@document->modal#escClose click->modal#blurClose" class="fixed z-10 inset-0 overflow-y-auto" aria-labelledby="dialog-1-title" role="dialog" aria-modal="true">
  <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
    <div data-modal-target="modal" class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity" aria-hidden="true"></div>
    <span class="hidden sm:inline-block sm:align-middle sm:h-screen" aria-hidden="true">&#8203;</span>

    <!-- modal content -->
    <div class="p-3 inline-block align-bottom bg-white rounded-lg text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full">
      <div class="flex">
        <%= image_tag get_image_path(result["poster_path"] || result["profile_path"]), class: "h-36 w-24" %>
        <h1 class="text-bold"><%= result["title"] || result["name"] %></h1>
        <button class="float-right h-0">X</button>
      </div>
    </div>

  </div>
</div>
