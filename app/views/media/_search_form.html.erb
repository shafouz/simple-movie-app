<div class="form w-full">
  <%= form_with url: "/search", data: { controller: "search", action: "submit#search#reset" }, class: "flex justify-center items-center" do |form| %>
    <%= form.text_field :query, class: form_control, placeholder: "Pesquise por filme, serie ou pessoa..." %>
    <%= form.submit "Search", class: btn_primary %>
  <% end %>
</div>
