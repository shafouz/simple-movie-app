<div class="flex flex-col mx-auto p-3 items-center w-2/3">
  <h2 class="my-5">Log in</h2>

  <div class="form w-4/6">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.email_field :email, autofocus: true, placeholder: "Email", autocomplete: "email", class: devise_form %>
      </div>

      <div class="field">
        <%= f.password_field :password, placeholder: "Password", autocomplete: "current-password", class: devise_form %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field mb-3">
          <%= f.check_box :remember_me, class: "checked:bg-blue-600 checked:border-transparent rounded cursor-pointer" %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in", class: btn_primary %>
      </div>
    <% end %>

    <div class="mt-36">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
