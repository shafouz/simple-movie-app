<div class="flex flex-col mx-auto p-3 items-center w-2/3">
  <h2 class="my-5">Sign up</h2>

  <div class="form w-4/6">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.email_field :email, autofocus: true, placeholder: "Email", autocomplete: "email", class: devise_form %>
      </div>

      <div class="field">
        <%= f.password_field :password, placeholder: "Password", autocomplete: "new-password", class: devise_form %>
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation, placeholder: "Password confirmation", autocomplete: "new-password", class: devise_form %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: btn_primary %>
      </div>
    <% end %>

    <div class="mt-36">
    <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
